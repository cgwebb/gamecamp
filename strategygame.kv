
#:include debug.kv

<StrategyGame>:
    id: _game
    main_map: _main_map
    map_rows: 10
    map_cols: 10
    BoxLayout:
        orientation: 'horizontal'
        GridLayout:
            id: _main_map
            game: _game
            cols: root.map_cols
            size_hint: .75, 1
        BoxLayout:
            orientation: 'vertical'
            size_hint: .25, 1
            DebugLabel:
                text: 'status'
                size_hint: 1, .66
            DebugLabel:
                text: 'mini-map'
                size_hint: 1, .33
